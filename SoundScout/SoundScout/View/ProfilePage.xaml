<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xlmns="http://xamarin.com/schemas/2014/forms"
             xlmns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Profile.ViewModel"
             mc:Ignorable="d"
             x:Class="Profile.View.ProfilePage"
             Title="Profile"
    <ContentPage.Resources>
        <ResourceDictionary>
        <vm:ProfileVM x:Key="vm"/>
    </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit Profile"
                     Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ListView ItemsSource="{Binding Source={Static Resource vm}, Path=ProfileInformation}">
            <StackLayout BackgroundColor="AliceBlue">
                <BoxView HeightRequest="15" />
                <Label Text="{Binding Name}"
                       HorizontalOptions="Center" VerticalOptions="Start"
                       FontSize="36" FontAttributes="Bold" />
                <Frame HeightRequest="200" WidthRequest="200" CornerRadius="100"
                       HorizontalOptions="Center" Margin="0" Padding="0"
                       BorderColor="Black" IsClippedToBounds="True" >
                    <!-- Place Photo Here -->
                    <Image Source="https://i5.walmartimages.com/asr/681f347f-3b7f-48df-a01b-c39daaf27af7_1.986b0aef04edb36d528fd74f9a4577ab.jpeg?odnWidth=450&odnHeight=450&odnBg=ffffff"
                       HeightRequest="250"
                       HorizontalOptions="Center"
                       VerticalOptions="Start"
                       Opacity="0.9"/>
                </Frame>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <Label HorizontalOptions="End"
                           FontAttributes="Bold"
                        Grid.Column="1" Grid.Row="1">Age:</Label>
                    <Label HorizontalOptions="Center"
                           FontAttributes="Bold"
                        Grid.Column="2" Grid.Row="1">Location:</Label>
                    <Label HorizontalOptions="Start"
                           FontAttributes="Bold"
                        Grid.Column="3" Grid.Row="1">Likes:</Label>
                    <Label Text="{Binding Age}"  
                           HorizontalOptions="End"
                            Grid.Column="1" Grid.Row="2">
                    </Label>
                    <Label Text="{Binding Location}"
                        HorizontalOptions="Center"
                        Grid.Column="2" Grid.Row="2">
                    </Label>
                    <Label Text="{Binding Genre}"
                        HorizontalOptions="Start"
                        Grid.Column="3" Grid.Row="2">
                    </Label>
                </Grid>
            </StackLayout>
        </ListView>
    </ContentPage.Content>
</ContentPage>