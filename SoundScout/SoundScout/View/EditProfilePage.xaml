<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xlmns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Profile.ViewModel"
             x:Class="Profile.View.NewUserPage"
             Title="User Information">
    <ContentPage.Resources>
        <ResourceDictionary>
            <vm:EditProfileVM x:Key="vm"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save"
                     Command="{Binding Source={StaticResource vm}, Path=SaveProfileCommand}"
                     CommandParameter="{Binding Source={StaticResource vm}, Path=Name}"
                     />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout Margin="16">
            <Entry Placeholder="Username"/>
            <Entry Placeholder="Name"/>
            <Entry Placeholder="Age"/>
            <Entry Placeholder="Location"/>
            <Entry Placeholder="Favorite Genre"/>
            <Entry Placeholder="Phone Number"/>
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="FillAndExpand"
            </StackLayout>
    </ContentPage.Content>
</ContentPage>